<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="400dp">

            <View
                android:id="@+id/view4"
                android:layout_width="363dp"
                android:layout_height="185dp"
                android:layout_marginTop="188dp"
                android:background="@color/white"
                android:elevation="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.333"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </View>

            <TextView
                android:id="@+id/restaurant_title"
                android:layout_width="263dp"
                android:layout_height="95dp"
                android:elevation="2dp"
                android:gravity="center"
                android:text="Hotel Restaurant Badalodge Bamako"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/type_view"
                app:layout_constraintEnd_toEndOf="@+id/view4"
                app:layout_constraintHorizontal_bias="0.637"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/view4"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/type_view"
                android:layout_width="263dp"
                android:layout_height="33dp"
                android:elevation="2dp"
                android:gravity="center"
                android:text="$. African . Fast-Food . Burgers"
                app:layout_constraintBottom_toTopOf="@+id/delivery_duration_vew"
                app:layout_constraintEnd_toEndOf="@+id/view4"
                app:layout_constraintHorizontal_bias="0.58"
                app:layout_constraintStart_toStartOf="@+id/view4"
                app:layout_constraintTop_toBottomOf="@+id/restaurant_title" />

            <TextView
                android:id="@+id/delivery_duration_vew"
                android:layout_width="110dp"
                android:layout_height="28dp"
                android:elevation="2dp"
                android:gravity="center"
                android:text="30 - 40 MIN"
                app:layout_constraintBottom_toBottomOf="@+id/view4"
                app:layout_constraintEnd_toEndOf="@+id/view4"
                app:layout_constraintStart_toStartOf="@+id/view4"
                app:layout_constraintTop_toBottomOf="@+id/type_view"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/event_image_view"
                android:layout_width="410dp"
                android:layout_height="290dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_launcher_background" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ListView
            android:id="@+id/food_listing"
            android:layout_width="match_parent"
            android:layout_height="500dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>